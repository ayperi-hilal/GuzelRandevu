@model GuzelRandevu.Models.Randevu

@{
    ViewData["Title"] = "Randevu Sil";
}

<h2>Randevu Sil</h2>

<h5>Randevunuzu silmek istediğinizden emin misiniz?</h5>
<div>
    <h4>Randevu</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.uye)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.uye.Id)
        </dd class>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.guzellikMerkezi)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.guzellikMerkezi.merkezId)
        </dd class>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.randevuDegerlendirmesi)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.randevuDegerlendirmesi)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.randevuPuani)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.randevuPuani)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.randevuSaati)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.randevuSaati)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.randevuTuru)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.randevuTuru)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="uyeId" />
        <input type="hidden" asp-for="merkezId" />
        <input type="submit" value="Sil" class="btn btn-danger" /> |
        <a asp-action="Index">Randevularımı Gör</a>
    </form>
</div>
