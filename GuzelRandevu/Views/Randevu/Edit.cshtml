@model GuzelRandevu.Models.Randevu

@{
    ViewData["Title"] = "Randevu Düzenle";
}

<h5>Randevu Düzenle</h5>

<h4>Randevu</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="uyeId" />
            <input type="hidden" asp-for="merkezId" />
            <div class="form-group">
                <label asp-for="randevuDegerlendirmesi" class="control-label"></label>
                <textarea asp-for="randevuDegerlendirmesi" class="form-control"></textarea>
                <span asp-validation-for="randevuDegerlendirmesi" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="randevuPuani" class="control-label"></label>
                <input asp-for="randevuPuani" class="form-control" />
                <span asp-validation-for="randevuPuani" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="randevuSaati" class="control-label"></label>
                <input asp-for="randevuSaati" class="form-control" />
                <span asp-validation-for="randevuSaati" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="randevuTuru" class="control-label"></label>
                <select asp-for="randevuTuru" class="form-control"></select>
                <span asp-validation-for="randevuTuru" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Kaydet" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Randevu Listesine Geri Dön</a>
</div>

