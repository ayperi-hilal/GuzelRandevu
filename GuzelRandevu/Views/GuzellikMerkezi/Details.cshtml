@model GuzelRandevu.Models.GuzellikMerkezi

@{
    ViewData["Title"] = "Güzellik Merkezi Detayları";
}

<h5>Güzellik Merkezi Detayları</h5>

<div>
    <h4>GuzellikMerkezi</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            
        </dt>
        <dd class="col-sm-10">
            <img src="@Html.DisplayFor(model => model.merkezResim)" />
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.merkezAdi)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.merkezAdi)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.merkezAdresi)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.merkezAdresi)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.merkezEmail)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.merkezEmail)
        </dd>
    </dl>
</div>
<div>
    @if (User.IsInRole("Admin"))
    {
        <a asp-controller="AdminPaneli" asp-action="MerkezEdit" asp-route-id="@Model.merkezId">Düzenle |</a>
        <a asp-controller="AdminPaneli" asp-action="RandevuCreate" >Randevu Oluştur |</a>
        <a asp-controller="AdminPaneli" asp-action="MerkezIndex">Güzellik Merkezlerine Geri Dön</a>
    }
    else
    {
        <a asp-controller="Randevu" asp-action="Create">Randevu Al |</a>
        <a asp-controller="GuzellikMerkezi" asp-action="Index">Güzellik Merkezlerine Geri Dön</a>
    }
</div>
