@model GuzelRandevu.Models.Randevu

@{
    ViewData["Title"] = "Randevu Al";
}

<h5>Randevu Al</h5>

<h4> </h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="RandevuCreate">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label class="control-label">Müşteri Adı</label>
                <select asp-for="uyeId" class="form-control" asp-items="ViewBag.uyeAdi"></select>
            </div>
            <div class="form-group">
                <label class="control-label">Güzellik Merkezi Adı</label>
                <select asp-for="merkezId" class="form-control" asp-items="ViewBag.merkezAdi"></select>
            </div>
            <div class="form-group">
                <label asp-for="randevuDegerlendirmesi" class="control-label"></label>
                <textarea asp-for="randevuDegerlendirmesi" class="form-control"></textarea>
                <span asp-validation-for="randevuDegerlendirmesi" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="randevuSaati" class="control-label"></label>
                <input asp-for="randevuSaati" class="form-control" />
                <span asp-validation-for="randevuSaati" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Oluştur" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="RandevuIndex">Randevu Listesine Geri Dön</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
